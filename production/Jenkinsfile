pipeline {
    agent { label "${node}" }

    parameters {
        string(name: 'VERSION', defaultValue: '', description: 'Version number for the docker image')
    }

    stages {
        stage('dockerhub pull') {
            steps {
                script {
                    def version = params.VERSION  // Store the version in a local variable
                    sh """
                        echo "Version: \${version}"  // Use the local variable for substitution
                        sudo docker pull sivanmarom/test:flask_image-\${version}
                        sudo docker run -it --name flaskApp -p 5000:5000 -d sivanmarom/test:flask_image-\${version}
                    """
                }
            }
        }
    }
}
