pipeline {
    agent { label "${node}" }

    stages {
        stage('dockerhub pull') {
            steps {
                sh 'sudo docker pull sivanmarom/test:flask_image-6.0'
                sh 'sudo docker run -it --name flaskApp -p 5000:5000 -d sivanmarom/test:flask_image-6.0'
                script {
                build job: 'production', parameters: [string(name: 'VERSION', value: newVersion.toString())]
            }
            }
        }
    }
}
